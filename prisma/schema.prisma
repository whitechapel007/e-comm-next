generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum Category {
  SHOES
  BAGS
  CLOTHING
  ACCESSORIES
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  INITIATION_FAILED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

/**
 * ===========================
 * USERS & AUTHENTICATION
 * ===========================
 */
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          Role      @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  reviews       Review[]
  wishlists     Wishlist[]
}
/**
 * ===========================
 * PRODUCTS & VARIANTS
 * ===========================
 */
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  basePrice   Float
  prevPrice   Float?
  discount    Float?   @default(0)
  rating      Float    @default(0)
  category    Category
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  isNewArrival Boolean @default(false)
  isTopSelling Boolean @default(false)

  // Images for default view (non-color-specific)
  images ProductImage[]

  // Color variants and their related stocks
  colorVariants ColorVariant[]

  sizes Size[] @relation("ProductSizes")

  // Relations
  orderItems OrderItem[]
  reviews    Review[]
  wishlists  Wishlist[]
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  url       String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ColorVariant {
  id        String  @id @default(cuid())
  productId String
  colorName String
  colorCode String // e.g., "bg-blue-900" or "#000000"
  price     Float
  inStock   Boolean @default(true)

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  images ColorVariantImage[]


  @@unique([productId, colorName])
}

model ColorVariantImage {
  id             String       @id @default(cuid())
  colorVariantId String
  url            String
  colorVariant   ColorVariant @relation(fields: [colorVariantId], references: [id], onDelete: Cascade)
}

/**
 * ===========================
 * SIZES & STOCKS
 * ===========================
 */
model Size {
  id       String    @id @default(cuid())
  name     String
  quantity String
  products Product[] @relation("ProductSizes")

}


/**
 * ===========================
 * ORDERS & PAYMENTS
 * ===========================
 */
model Order {
  id              String        @id @default(cuid())
  userId          String
  status          OrderStatus   @default(PENDING)
  totalAmount     Float
  paymentStatus   PaymentStatus @default(PENDING)
  paymentRef      String?       @unique
  shippingAddress String
  phoneNumber     String

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user         User          @relation(fields: [userId], references: [id])

  orderItems   OrderItem[]   @relation("OrderToOrderItems")

  transactions Transaction[]
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  colorName String? // store chosen color for reference
  size      String?
  quantity  Int
  price     Float
  createdAt DateTime @default(now())

  order   Order   @relation("OrderToOrderItems", fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

model Transaction {
  id             String        @id @default(cuid())
  orderId        String
  amount         Int
  paymentMethod  String
  status         PaymentStatus @default(PENDING)
  transactionRef String        @unique
  channel        String
  currency       String
  metadata       Json?
  createdAt      DateTime      @default(now())
  accessCode     String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

/**
 * ===========================
 * REVIEWS & WISHLISTS
 * ===========================
 */
model Review {
  id        String   @id @default(cuid())
  userId    String
  productId String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

/**
 * ===========================
 * AUTH (NEXT-AUTH STYLE)
 * ===========================
 */
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
